
<!DOCTYPE html>
<html>
<head>
<script>

function initializare()
{
locatie=document.getElementById("tinta")
tabel=document.getElementById("tb")
}

function insereaza1()
{
continut="<form action='destinatie.php'>User:<input type='text' name='x'/><br/>Parola:<input type='password' name='y'/><br/><input type='submit'/></form>"
locatie.innerHTML=continut
}

function insereaza4()
{
campnou=document.createElement("textarea")

campnou.setAttribute("name","comentariu")

formular=document.forms[0]

nr=formular.elements.length

butonsubmit=formular.elements[nr-1]

campnou=formular.insertBefore(campnou,butonsubmit)

campnou.innerHTML="Introduceti un comentariu"

}
	

function sterge()
{
locatie.innerHTML=""
}

function insereaza2()
{
continut="<tr><td>aaa</td><td>bbb</td></tr><tr><td rowspan='2'>cccddd</td></tr><tr><td>eee</td><td>fff</td></tr>"
tabel.innerHTML=continut
}

function insereaza3()
{
rand=tabel.rows[0]
rand.cells[0].innerHTML="aaa"
rand.cells[1].innerHTML="bbb"
rand=tabel.rows[1]
celula=rand.cells[0]
celula.colSpan=2
celula.innerHTML="cccddd"
rand.deleteCell(1)
nrranduri=tabel.rows.length
rand=tabel.insertRow(nrranduri)
rand.insertCell(0).innerHTML="ddd"
rand.insertCell(1).innerHTML="eee"
}

</script>
</head>

<body onload="initializare()">
<input type="button" value="insereaza formular" onclick="insereaza1()"/><br/>
<input type="button" value="adauga la formular un textarea" onclick="insereaza4()"/><br/>
<input type="button" value="sterge formular" onclick="sterge()"/><br/>
<div id="tinta"></div>
<input type="button" value="modifica tabel (nu merge in IE)" onclick="insereaza2()"/><br/>
<input type="button" value="modifica tabel (merge si in IE)" onclick="insereaza3()"/><br/>
<table id="tb"  border="1">
<tr><td>celula1</td><td>celula2</td></tr>
<tr><td>celula3</td><td>celula4</td></tr>
</table>
</body>
</html>
